<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_list_phim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/anime" />

    <TableLayout
        android:layout_below="@+id/image_list_phim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:id="@+id/txt_ten_phim_listmovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_list_phim"
                android:text="Tên phim"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/edit_phim_ten_lismovie"
                android:layout_width="307dp"
                android:layout_height="56dp"
                android:layout_below="@+id/image_list_phim"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/txt_ten_phim_listmovie"
                android:text="TextView"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txt_ten_theloai_listmovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_ten_phim_listmovie"
                android:text="Thể loại"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/edit_the_loai_lismovie"
                android:layout_width="303dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/edit_phim_ten_lismovie"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/txt_ten_theloai_listmovie"
                android:text="TextView"
                android:textSize="20sp" />

        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txt_thoi_luong_listmovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_ten_theloai_listmovie"
                android:text="Thời lượng"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/edit_thoi_luong_lismovie"
                android:layout_width="305dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/edit_the_loai_lismovie"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/txt_thoi_luong_listmovie"
                android:text="TextView"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>
</RelativeLayout>