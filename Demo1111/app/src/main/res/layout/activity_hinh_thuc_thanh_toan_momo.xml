<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/txtnguontien"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D6D4D4"
                android:paddingBottom="10dp"
                android:text="NGUỒN TIỀN"
                android:textColor="#0E0E0E"
                android:textSize="24sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.052"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.01" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="140dp"
                android:layout_height="88dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txtnguontien"
                tools:listitem="@layout/imagethanhtoan_item"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

            <Button
                android:id="@+id/btnthaydoi"
                android:layout_width="135dp"
                android:layout_height="71dp"
                android:layout_below="@id/txtnguontien"
                android:layout_marginLeft="106dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/recyclerView"
                android:paddingBottom="10dp"
                android:text="THAY ĐỔI"
                android:textColor="#3F51B5"
                android:textSize="19sp"
                app:backgroundTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.942"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.101" />
            <TextView
                android:id="@+id/txtchitiet"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/recyclerView"
                android:background="#D6D4D4"
                android:paddingBottom="10dp"
                android:text="CHI TIẾT GIAO DỊCH"
                android:textColor="#0E0E0E"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.252"
                tools:layout_editor_absoluteX="16dp" />
            <TextView
                android:id="@+id/txtnhacc"
                android:layout_width="142dp"
                android:layout_height="33dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Nhà cung cấp"
                android:layout_below="@id/txtchitiet"
                android:textSize="23sp"
                android:layout_marginLeft="43dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.059"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.339" />
            <TextView
                android:id="@+id/txtsđt"
                android:layout_width="142dp"
                android:layout_height="33dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Số điện thoại"
                android:textSize="23sp"
                android:layout_marginLeft="43dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txtnhacc"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.059"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtnhacc"
                app:layout_constraintVertical_bias="0.056" />
            <TextView
                android:id="@+id/txttaikhoan"
                android:layout_width="142dp"
                android:layout_height="33dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Tài khoản"
                android:layout_marginLeft="43dp"
                android:textSize="23sp"
                android:layout_below="@id/txtsđt"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.059"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtsđt"
                app:layout_constraintVertical_bias="0.059" />

            <TextView
                android:id="@+id/txtnoidung"
                android:layout_width="142dp"
                android:layout_height="33dp"
                android:layout_below="@id/txttaikhoan"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="43dp"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="226dp"
                android:layout_marginRight="226dp"
                android:text="Nội dung"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtsotien"
                android:layout_width="142dp"
                android:layout_height="33dp"
                android:layout_below="@id/txtnoidung"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="43dp"
                android:layout_marginLeft="43dp"

                android:layout_marginEnd="226dp"
                android:layout_marginRight="226dp"
                android:text="Số tiền"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtkhuyenmai"
                android:layout_width="142dp"
                android:layout_height="33dp"
                android:layout_below="@id/txtsotien"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="43dp"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="226dp"
                android:layout_marginRight="226dp"
                android:text="Khuyến mãi"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txttongtien"
                android:layout_width="142dp"
                android:layout_height="33dp"
                android:layout_below="@id/txtkhuyenmai"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="43dp"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="226dp"
                android:layout_marginRight="226dp"
                android:text="Tổng tiền"
                android:textSize="20sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnxacnhan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/txttongtien"
                android:layout_marginTop="10dp"
                android:backgroundTint="#F44336"
                android:text="Xác nhận"
                android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>