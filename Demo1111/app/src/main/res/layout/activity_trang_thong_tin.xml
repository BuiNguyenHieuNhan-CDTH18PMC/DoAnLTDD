<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="289dp"
        android:src="@drawable/logo_cgv" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="361dp"
        android:background="#E91E63"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="Tên Hiển Thị"
        android:textColor="@color/purple_500"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnthongtin"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtName"
        android:layout_marginTop="119dp"
        android:layout_marginBottom="238dp"
        android:background="#E91E63"
        android:onClick="THONGTIN"
        android:text="THÔNG TIN"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/btniaodich"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtName"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="121dp"
        android:layout_marginRight="1dp"
        android:layout_toRightOf="@id/btnthongtin"
        android:background="#E91E63"
        android:onClick="GIAODICH"
        android:text="GIAO DỊCH"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="OnClick" />

</RelativeLayout>